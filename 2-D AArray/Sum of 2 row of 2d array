import java.util.*;
public class DataStructure{

    

    public static void sum(int matrix [][]){
        int sum=0;
        int i=1;
            for(int j=0;j<matrix[0].length;j++){
                sum+=matrix[i][j];
                
            }
            System.out.println("Sum is: "+sum);
        }
        

    public static void main(String[] args) {
        int matrix[][]={{4, 7, 8},
                        {8, 8, 7}};
        sum(matrix);                    
    }
}

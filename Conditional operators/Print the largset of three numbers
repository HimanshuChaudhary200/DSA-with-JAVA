 //Print the largest of three numbers
import java.util.*;
public class JavaRevision{
    public static void main(String args[]){
       int a=1;
       int b=3;
       int c=6;

       if(a>=b){
        if(a>=c){
            System.out.println("a is largest");
        }
        else{
            System.out.println("c is largest");
        }
       }
       else if(b>=c){
        System.out.println("b is largset");
       }
       else{
        System.out.println("c is largest");
       }
    }
}
